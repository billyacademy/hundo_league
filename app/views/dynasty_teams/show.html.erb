        </div>
      </div>
  <% end %>
  <h3 align="center">Salary Cap -<%=  @current_year %></h3>
  <div class="playerbox">
    <div align="center">Cost of Players: $<%= @total_player_cost %></div>
  </div>
  <div class="playerbox">
    <div align="center">Net Adjustment: $<%= @net_adjustment %></div>
  </div>
  <div class="playerbox">
    <div align="center">Current Cap: $<%= @total_player_cost-@net_adjustment %></div>
  </div>
  <div class="playerbox">
    <div align="center">Net Cap Space: <%= 300-(@total_player_cost-@net_adjustment) %></div>
  </div>
  <h3 align="center"> Cap Transactions </h3>
  <% @salary_cap_adjustments.each do |cap_adjustment| %>
    <div class="playerbox">
      <div align="center">
      <% if cap_adjustment.cap_sender_id == @dynasty_team.id %>
