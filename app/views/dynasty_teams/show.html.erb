<div class="col-1" width=16.66% class="float-left">
  <h3 align="center">QUARTERBACKS (<%= @quarterbacks.count() %>)</h3>
  <% @quarterbacks.each do |qb| %>
      <div class="playerbox">
        <% if qb['esbid'] != nil %>
            <%= image_tag('http://static.nfl.com/static/content/public/static/img/fantasy/transparent/200x200/'+qb['esbid']+'.png', size: "35x35") %><br>
        <% end %>
        <p><%= qb.name %>,
        <%= qb.position %><br>
        <%= qb.teamAbbr %><br>
        <%= link_to('NFL PROFILE PAGE', 'http://www.nfl.com/player/'+qb['name'].delete(' ')+'/'+qb['player_id'].to_s+'/profile') %>
         - <%= link_to('WDD PAGE', player_path(qb.id)) %><br>
        Current Salary: $<%= @player_contract.where(player_id: qb[:player_id]).first().current_salary %>
        <% if @player_contract.where(player_id: qb[:player_id]).first().current_salary < 15 %>
              -- Next Year Proj: $<%= @player_contract.where(player_id: qb[:player_id]).first().current_salary + 1 %>
        <% else %>
              -- Next Year Proj: $<%= (@player_contract.where(player_id: qb[:player_id]).first().current_salary * 1.1).round %>
        <% end %>
        <% if @player_contract.where(player_id: qb[:player_id]).first().is_top_fourteen %>
            <br>Top 14 Player
        <% end %>
        <br>First Year Under Contract: <%= @player_contract.where(player_id: qb[:player_id]).first().first_year %>
        </p>
      </div>
  <% end %>
</div>

