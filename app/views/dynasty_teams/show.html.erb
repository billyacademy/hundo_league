<div class="col-6" width=16.66% class="float-left">
  <h3 align="center"><%= @current_year %> Draft Picks</h3>
  <% @draft_picks_this_year.each do |pick| %>
      <div class="playerbox">
        <div align="center">
          Round: <%= pick.round %>
          <% if pick.pick != nil %>
              - Pick: <%= pick.pick %><br>
          <% elsif pick.comments != 'None'  %>
              - <%= pick.comments %>
          <% end %>
        </div>
      </div>
  <% end %>
  <h3 align="center"><%= @next_year %> Draft Picks</h3>
  <% @draft_picks_next_year.each do |pick| %>
      <div class="playerbox">
        <div align="center">
        Round: <%= pick.round %>
        <% if pick.pick != nil %>
            - Pick: <%= pick.pick %><br>
        <% elsif pick.comments != 'None'  %>
            - <%= pick.comments %>
        <% end %>
        </div>
      </div>
  <% end %>
  <h3 align="center"><%= @two_years_from_now %> Draft Picks</h3>
  <% @draft_picks_two_years_from_now.each do |pick| %>
      <div class="playerbox">
